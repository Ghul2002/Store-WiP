<Window x:Class="Store.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Window2" Height="300" Width="400
        ">
    <Grid>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="40,42,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" RenderTransformOrigin="0.347,-0.317" Height="20" Background="#FFDDDDDD"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,18,0,0" Text="Product name:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" RenderTransformOrigin="0.441,0.003"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,77,0,0" Text="Product category:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="283,220,0,0" VerticalAlignment="Top" Width="74" Click="Add_Click"/>
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Margin="40,220,0,0" VerticalAlignment="Top" Width="74" Click="Back_Click"/>
        <ListBox x:Name="Category" Margin="40,101,80,93" Background="#FFDDDDDD"/>

    </Grid>
</Window>
